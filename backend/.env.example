# ACM算法学习平台 - 环境变量配置示例
# 参考：开发指南V3 - 3.3 环境变量配置详解

# === 应用配置 ===
APP_NAME=acm-learning-platform
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-change-this-in-production

# === MySQL配置 ===
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=acm_user
MYSQL_PASSWORD=acm_password
MYSQL_DATABASE=acm_platform

# === MongoDB配置 ===
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=acm_user
MONGODB_PASSWORD=acm_password
MONGODB_DATABASE=acm_platform

# === Redis配置 ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === MinIO配置 ===
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET=acm-platform

# === JWT配置 ===
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# === Claude AI配置 ===
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096

# === DeepSeek AI配置（备选）===
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_MODEL=deepseek-chat

# === Celery配置 ===
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# === 日志配置 ===
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# === CORS配置 ===
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# === 积分配置 ===
# 每次AI对话消耗积分
COACH_POINTS_PER_MESSAGE=10
# 每个Token消耗积分（单位：积分/百万Token）
POINTS_PER_MILLION_TOKENS=100
# 新用户赠送积分
NEW_USER_BONUS_POINTS=100

# === 文件上传配置 ===
MAX_UPLOAD_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=pdf,mp4,mp3
